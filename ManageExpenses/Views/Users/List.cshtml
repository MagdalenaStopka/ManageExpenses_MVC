@model IEnumerable<ManageExpenses.Models.UserListItemModel>


<p>
	Ilość użytkowników @Model.Count()
</p>


@if (Model.Count() > 0)
{
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th width="25%">Imię</th>
				<th width="30%">Nazwisko</th>
				<th width="25%">Login</th>
				<th width="20%"></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.FirstName</td>
					<td>@item.LastName</td>
					<td>@item.Login</td>
					<td>
						<a class="btn btn-primary btn-sm" href="@Url.Action("Edit", new { item.Id })" >
							<i class="glyphicon glyphicon-edit"></i> Edytuj
						</a>
						<a class="btn btn-danger btn-sm" href=""@Url.Action("Delete", new { item.Id })"">
							<i class="glyphicon glyphicon-remove"></i> Usuń
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<div class="panel panel-default">
		<div class="panel-body text-center">
			Brak użytkowników
		</div>
	</div>
}


<div>
	<a href="@Url.Action("Add")" class="btn btn-primary">
		<i class="glyphicon glyphicon-plus"></i> Dodaj użytkownika
	</a>
</div>