@model IEnumerable<ManageExpenses.Entities.ExpenseCategory>

<h1>Lista Twoich kategorii wydatków</h1>
<p>
    Ilość kategorii @Model.Count()
</p>


@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th width="30%">Nazwa kategorii</th>
               
                <th width="70%"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    
                    <td>
                        <a class="btn btn-primary btn-sm" href="/ExpensesCategory/Edit/@item.Id">
                            <i class="glyphicon glyphicon-edit"></i> Edytuj
                        </a>
                       
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="panel panel-default">
        <div class="panel-body text-center">
            Brak kategorii
        </div>
    </div>
}


<div>
    <a href="/ExpensesCategory/Add" class="btn btn-primary">
        <i class="glyphicon glyphicon-plus"></i> Dodaj nową kategorię
    </a>
</div>
