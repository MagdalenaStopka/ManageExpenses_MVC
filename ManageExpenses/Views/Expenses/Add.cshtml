@model ManageExpenses.Models.AddExpenseModel

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name, "Wydatek")
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CategoryId, "Kategoria wydatku")
        @Html.DropDownListFor(m => m.CategoryId, Model.Categories, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Value, "Wartość")
        @Html.TextBoxFor(m => m.Value, new { @class = "form-control" })
    </div>

    <input type="submit" class="btn btn-primary" />
}